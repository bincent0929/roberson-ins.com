// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/debian
{
	"name": "Debian",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/base:bookworm",
	"features": {
		"ghcr.io/devcontainers/features/go:1": {},
		"ghcr.io/devcontainers-community/npm-features/typescript:1": {},
		"ghcr.io/devcontainers-extra/features/caddy:1": {}
	},

	// installs packages through apt-get (should be optimized for versioning, etc. in the future)
	"postCreateCommand": "/bin/bash ./.devcontainer/install-packages.sh",

	// makes port 443 available globally. ensure firewall security
	"forwardPorts": [443],
	
	"runArgs": ["-p", "0.0.0.0:443:443"]
}
