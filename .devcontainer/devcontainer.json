{
	"name": "Debian",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/base:bookworm",
	"features": {
		"ghcr.io/devcontainers/features/node:1": {},
		"ghcr.io/devcontainers-extra/features/caddy:1": {}
	},

	// installs packages through apt-get (should be optimized for versioning, etc. in the future)
	"postCreateCommand": "/bin/bash ./.devcontainer/install-packages.sh",

	// makes port 443 available globally. ensure firewall security
	"forwardPorts": [443],
	
	"runArgs": [
		"-p",
		"0.0.0.0:443:443"
	],
	
	"customizations": {
		"vscode": {
			"extensions": [
				"matthewpi.caddyfile-support",
				"openai.chatgpt"
			]
		}
	}
}
